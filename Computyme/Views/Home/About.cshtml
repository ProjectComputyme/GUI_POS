    $("#Reset").click(function () {
        $("#SARGrid").jqGrid('setGridParam', { url: "/Administration/PullProcessSar?SAR_ID=", datatype: "json", page: 1 }).trigger("reloadGrid");
    });


    $("#sendAll").click(function () {

        var localGridData = $("#SARGrid").jqGrid('getGridParam', 'data');

        sendData(localGridData);

    });


    var sendData = function (data) {
        var dataToSend = JSON.stringify(data);
        // alert("The following data are sending to the server:\n" + dataToSend);
        $.ajax({
            type: "POST",
            url: "/Administration/ProcessGridSars",
            dataType: "json",
            data: dataToSend,
            contentType: "application/json; charset=utf-8",
            beforeSend: function () {
                $("#loader").show();
            },
            success: function (response, textStatus, jqXHR) {
                // display an success message if needed
                $("#loader").hide();
                window.location = 'Administration';
            },
            error: function (jqXHR, textStatus, errorThrown) {
                // display an error message in any way
                alert("error");
            }
        });
    };


    $("#Product").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: "/Home/GetProduct",
                dataType: "json",
                delay: 1,
                data: {
                    term: request.term
                },

                success: function (data) {
                    response($.map(data, function (item, i) {
                        return {
                            label: item.PROD + " - " + item.DESC1,
                            value: item.PROD,
                            productDesc: item.DESC1,
                            cost: item.SALE
                        }
                    }))

                }
            })
        },
        select: function (event, ui) {

            $("input#Description").val(ui.item.productDesc);
            $("input#Serial").val(ui.item.value);
            $("input#Cost").val(ui.item.cost);

            return false;
        }
    });




